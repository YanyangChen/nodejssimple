extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'contentEditable='true'></span>
                br
                strong Age:
                |  <span id='userInfoAge' contentEditable='true'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'contentEditable='true'></span>
                br
                strong Username:
                |  <span id='userInfoUsername'contentEditable='true'></span>
                br
                strong Email:
                |  <span id='userInfoEmail'contentEditable='true'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'contentEditable='true'></span>
                br
                button#btnUpdateUser Update User
        // /USER INFO
        h2 Search User
        #searchFields
            fieldset
                input#inputSearchUserName(type='text', placeholder='Username')
                button#btnSearchUser Search Any
                br
                input#inputSearchEmail(type='text', placeholder='Email')
                //button#btnSearchEmail Search Email
        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER


        // Detail LIST
        h2 Detail List
        #detailList
                table
                    thead
                        th UserName
                        th Address
                        th Phone
                        th Title
                        th Delete?
                        th Update?
                    tbody
                br
                button#btnAddDetails Add Details
         // /Detail LIST

        //
        //h2 Add Detail


    // /WRAPPER